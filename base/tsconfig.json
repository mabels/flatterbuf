{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "plugins": [{ "name": "typescript-tslint-plugin" }]
  },

  "exclude": [
    "**/*.off/**",
    "**/*.test-helper.ts",
    "**/*.test-helper.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "./node_modules"
  ],
  "include": [
    "./src/**/*"
  ],
}
